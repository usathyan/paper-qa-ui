{
  "llm": "ollama/llama3.2",
  "summary_llm": "ollama/llama3.2", 
  "embedding": "ollama/nomic-embed-text",
  "temperature": 0.1,
  "verbosity": 3,
  "answer": {
    "evidence_k": 10,
    "evidence_detailed_citations": true,
    "evidence_retrieval": true,
    "evidence_summary_length": "about 100 words",
    "evidence_skip_summary": false,
    "answer_max_sources": 10,
    "max_answer_attempts": 3,
    "answer_length": "about 200 words",
    "max_concurrent_requests": 1
  },
  "parsing": {
    "chunk_size": 2000,
    "overlap": 100,
    "use_doc_details": true
  },
  "prompts": {
    "use_json": false,
    "summary": "Summarize the following text concisely to help answer the user's question.\n\nText: {text}\n\nSummary:",
    "qa": "Answer the question '{question}' using the context below. Cite sources when possible.\n\nContext: {context}",
    "system": "You are a helpful AI assistant that answers questions based on scientific papers."
  },
  "agent": {
    "agent_type": "ToolSelector",
    "search_count": 15,
    "timeout": 600.0,
    "agent_evidence_n": 10,
    "return_paper_metadata": true,
    "tool_names": [
      "paper_search",
      "gather_evidence", 
      "gen_answer",
      "complete"
    ],
    "index": {
      "paper_directory": "./papers",
      "index_directory": "./indexes"
    }
  }
}