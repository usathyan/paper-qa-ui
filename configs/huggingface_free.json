{
  "llm": "huggingface/microsoft/DialoGPT-medium",
  "summary_llm": "huggingface/microsoft/DialoGPT-medium",
  "embedding": "sentence-transformers/all-MiniLM-L6-v2",
  "temperature": 0.2,
  "verbosity": 3,
  "answer": {
    "evidence_k": 8,
    "evidence_detailed_citations": true,
    "evidence_retrieval": true,
    "evidence_summary_length": "about 80 words",
    "evidence_skip_summary": false,
    "answer_max_sources": 8,
    "max_answer_attempts": 2,
    "answer_length": "about 150 words",
    "max_concurrent_requests": 1
  },
  "parsing": {
    "chunk_size": 1500,
    "overlap": 100,
    "use_doc_details": true
  },
  "prompts": {
    "use_json": false,
    "summary": "Summarize this text: {text}",
    "qa": "Question: {question}\n\nContext: {context}\n\nAnswer:",
    "system": "Answer questions based on the provided context."
  },
  "agent": {
    "agent_type": "ToolSelector", 
    "search_count": 10,
    "timeout": 300.0,
    "agent_evidence_n": 8,
    "return_paper_metadata": true,
    "tool_names": [
      "paper_search",
      "gather_evidence",
      "gen_answer",
      "complete"
    ],
    "index": {
      "paper_directory": "./papers", 
      "index_directory": "./indexes"
    }
  }
}