{
  "llm": "openrouter/anthropic/claude-3.5-sonnet",
  "summary_llm": "openrouter/anthropic/claude-3.5-sonnet",
  "embedding": "ollama/nomic-embed-text",
  "temperature": 0.1,
  "verbosity": 5,
  "agent": {
    "agent_llm": "openrouter/anthropic/claude-3.5-sonnet",
    "agent_llm_config": {
      "api_key": "${OPENROUTER_API_KEY}",
      "base_url": "https://openrouter.ai/api/v1"
    },
    "agent_type": "ToolSelector",
    "search_count": 50,
    "timeout": 1200,
    "should_pre_search": true,
    "wipe_context_on_answer_failure": true,
    "agent_evidence_n": 20,
    "return_paper_metadata": true,
    "index": {
      "paper_directory": "./papers",
      "index_directory": "./indexes",
      "recurse_subdirectories": true,
      "concurrency": 5,
      "sync_with_paper_directory": true
    }
  },
  "answer": {
    "evidence_k": 50,
    "evidence_detailed_citations": true,
    "evidence_retrieval": true,
    "evidence_relevance_score_cutoff": 0.5,
    "evidence_summary_length": "about 200 words",
    "evidence_skip_summary": false,
    "answer_max_sources": 30,
    "max_answer_attempts": 5,
    "answer_length": "about 800 words",
    "max_concurrent_requests": 5,
    "answer_filter_extra_background": false,
    "get_evidence_if_no_contexts": true,
    "group_contexts_by_question": true
  },
  "parsing": {
    "chunk_size": 3000,
    "page_size_limit": 2000000,
    "pdfs_use_block_parsing": true,
    "use_doc_details": true,
    "overlap": 500,
    "disable_doc_valid_check": false,
    "defer_embedding": false,
    "chunking_algorithm": "markdown"
  },
  "prompts": {
    "use_json": true,
    "summary": "Provide a comprehensive summary of the following text that is highly relevant to answering the user's question. Include specific details, findings, and conclusions. Focus on information that directly addresses the question.\n\nText: {text}\n\nComprehensive Summary:",
    "qa": "Answer the question '{question}' comprehensively using the context below. Provide detailed explanations, cite specific sources using the provided citation keys like (pqac-abcd1234), and include relevant findings and conclusions. If there is insufficient context, clearly state what information is missing.\n\nContext: {context}",
    "select": "Select the most relevant papers for answering the question: {question}\n\nPapers: {papers}\n\nSelected papers (provide detailed reasoning for each selection):",
    "system": "You are an expert scientific research assistant that provides comprehensive, detailed answers based on scientific papers. Always cite your sources using the provided citation keys and provide thorough explanations with specific findings and conclusions."
  }
}