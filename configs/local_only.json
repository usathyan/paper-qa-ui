{
  "llm": "openrouter/google/gemini-2.5-flash-lite",
  "summary_llm": "openrouter/google/gemini-2.5-flash-lite",
  "embedding": "ollama/nomic-embed-text",
  "temperature": 0.0,
  "verbosity": 3,
  "agent": {
    "agent_llm": "openrouter/google/gemini-2.5-flash-lite",
    "agent_type": "ToolSelector",
    "search_count": 3,
    "timeout": 300.0,
    "should_pre_search": false,
    "wipe_context_on_answer_failure": true,
    "agent_evidence_n": 1,
    "return_paper_metadata": true,
    "tool_names": ["GatherEvidence", "GenAnswer"],
    "index": {
      "paper_directory": "./papers",
      "index_directory": "./indexes",
      "recurse_subdirectories": true,
      "concurrency": 3,
      "sync_with_paper_directory": true,
      "rebuild_index": true
    }
  },
  "answer": {
    "evidence_k": 8,
    "evidence_detailed_citations": true,
    "evidence_retrieval": true,
    "evidence_relevance_score_cutoff": 1,
    "evidence_summary_length": "about 80 words",
    "evidence_skip_summary": false,
    "answer_max_sources": 3,
    "max_answer_attempts": 2,
    "answer_length": "about 150 words",
    "max_concurrent_requests": 2,
    "answer_filter_extra_background": false,
    "get_evidence_if_no_contexts": true,
    "group_contexts_by_question": false,
    "skip_evidence_citation_strip": false
  }
} 